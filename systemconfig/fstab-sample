# Begin /etc/fstab

# file system  mount-point  type     options             dump  fsck
#                                                              order

/dev/sda1      /            ext3     defaults            1     1
/dev/sda2      /boot        ext3     defaults            1     2
/dev/sda3      /usr         ext3     defaults            1     2
#sda4 - Extended
/dev/sda5      /usr         ext3     defaults            1     2
/dev/sda6      /opt         ext3     defaults            1     2
/dev/sda7      swap         swap     pri=1               0     0
/dev/sda8      /home        ext3     defaults            1     2

# End /etc/fstab
